<body>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h1>Editind Book</h1>
           <%= form_with model: @book do |f| %>
            <div class="form-group">
              <label for="inputTitle">Title</label>
              <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputTitle"%>
            </div>
            <div class="form-group">
              <label for="inputOpinion">Opinion</label>
              <%= f.text_area :body, autofocus: true, class:"form-control", id:"inputOpinion"%>
            </div>
            <div class="form-group">
              <%= f.submit "Update Book", class:"btn btn-secondary" %>
            </div>
           <% end %>
           <%= link_to "Show", book_path(@book) %>
            |
           <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </main>
</body>
