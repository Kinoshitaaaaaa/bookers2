     <% books.each do |book| %>
      <div class="row">
        <div class="col-md-3">
          <h2>User Info</h2>
          <%= image_tag @book.user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>introduction</tr>
              <tr><%= @user.introduction %></tr>
            </tbody>
          </table>
          <div class="row">
            <%=link_to "edit" "edit_user_path(resource)",class: "btn btn-outline-secondary btn-block" %>
          </div>
          <h2 class="mt-3">New book</h2>
           <%= form_with model: @book do |f| %>
            <h4>Title</h4>
             <%= f.text_field :title %>
            <h4>Opinion</h4>
             <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
           <% end %>
        </div>
      </div>
     <% end %>