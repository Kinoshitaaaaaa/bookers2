<body>
  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
     <%= render "create",user: @user,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
           <% @books.each do |book| %>
            <% link to user_path(@user) do %>
             <td><%= image_tag user.get_profile_image(80,80) %></td>
            <% end %>
            <% link to book_path(@book) do %>
             <td><%= book.title %></td>
            <% end %>
             <td><%= book.body %></td>
           <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </main>
</body>
