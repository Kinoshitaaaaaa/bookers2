<body>
  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
     <%= render 'create', books: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
           <% @books.each do |book| %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
           <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </main>
</body>
