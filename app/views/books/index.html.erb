<body>
  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User Info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>introduction</tr>
              <tr><%= @user.introduction %></tr>
            </tbody>
          </table>
          <div class="row">
            <%=link_to "edit" "edit_user_path(resource)",class: "btn btn-outline-secondary btn-block" %>
          </div>
          <h2 class="mt-3">New book</h2>
           <%= form_with model: @book do |f| %>
            <h4>Title</h4>
             <%= f.text_field :title %>
            <h4>Opinion</h4>
             <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
           <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
         <% @books.each do |book| %>
          <tr><%= book.title %></tr>
          <tr><%= book.body %></tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </main>
</body>
